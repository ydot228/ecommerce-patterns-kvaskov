<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>
    <style>
      body { font-family: Arial, sans-serif; margin: 24px; }
      table { border-collapse: collapse; width: 100%; max-width: 820px; }
      th, td { border: 1px solid #ddd; padding: 8px; }
      th { background: #f6f6f6; }
      a { color: #1b5aa0; }
      .actions { white-space: nowrap; }
      .top { display: flex; gap: 12px; align-items: center; justify-content: space-between; max-width: 820px; }
      form { display: inline; }
      button { padding: 6px 10px; }
    </style>
  </head>
  <body>
    <div class="top">
      <h1><%= title %></h1>
      <div>
        <a href="/">На главную</a>
        &nbsp;|&nbsp;
        <a href="/users/new">Добавить</a>
      </div>
    </div>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>ФИО</th>
          <th class="actions">Действия</th>
        </tr>
      </thead>
      <tbody>
        <% if (users.length === 0) { %>
          <tr><td colspan="4">Пока нет пользователей</td></tr>
        <% } %>
        <% users.forEach(function(u){ %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.email %></td>
            <td><%= u.fullName %></td>
            <td class="actions">
              <a href="/users/<%= u.id %>/edit">Изменить</a>
              &nbsp;|
              <form method="post" action="/users/<%= u.id %>/delete" onsubmit="return confirm('Удалить пользователя?')">
                <button type="submit">Удалить</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
