{
  "name": "ecommerce-architecture-patterns",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "shared/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace apps/web-mvc run dev",
    "dev:gateway": "npm --workspace apps/api-gateway run dev",
    "dev:catalog": "npm --workspace services/catalog-service run dev",
    "dev:orders": "npm --workspace services/order-service run dev"
  },
  "engines": {
    "node": ">=18"
  }
}
